  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "typeRoots": ["src/types", "./node_modules/@types"]
  },
  "include": ["src/**/*", "src/types/**/*"],

  "exclude": ["node_modules"]
}
